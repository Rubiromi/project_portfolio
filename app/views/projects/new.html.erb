<h1>Add a new project</h1>

<%= form_for(@project) do |f| %>
  <div>
    <%= f.label(:name) %>
    <%= f.text_field(:name) %>
  </div>

  <div>
      <%= f.label(:client) %>
      <%= f.text_field(:client) %>
  </div>

  <div>
      <%= f.label(:description) %>
      <%= f.text_field(:description) %>
  </div>

  <div>
      <%= f.label(:completed, 'Completed?') %>
      <%= f.check_box(:completed) %>
  </div>

  <div>
      <%= f.submit('Save Project') %>
  </div>

<% end %>
