<!DOCTYPE html>
<html>
<head>
  <title>ProjectPortfolio</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <div id="wrap">
    <header>
      <nav>
        <%= link_to('Main Page', root_path) %>
        <span>&nbsp;|&nbsp;</span>
        <%= link_to('Check Projects', projects_path) %>
        <span>&nbsp;|&nbsp;</span>
        <%= link_to('About Us', about_path) %>
        <span>&nbsp;|&nbsp;</span>
        <%= link_to('Create a new project', new_project_path) %>
      </nav>
    </header>

    <%= show_yay_message %>

    <section id="main-content">
      <%= yield %>
    </section>

    <footer>
      Copyright &copy; <%= Time.now.year %> - Hiromi De Young
    </footer>

  </div>

</body>
</html>
